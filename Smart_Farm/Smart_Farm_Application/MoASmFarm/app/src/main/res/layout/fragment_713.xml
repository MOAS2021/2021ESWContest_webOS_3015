<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sub7fragment.Fragment713">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/wwhite"
        app:cardCornerRadius="20dp"
        app:cardElevation="30dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/purchase_iv_image"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:adjustViewBounds="true"
                    android:padding="8dp"
                    android:src="@drawable/seedbaj" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <TextView
                    android:id="@+id/purchase_tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:textSize="50sp"
                    android:text=" 모아스팜 A+등급  ★   바질 씨앗   ★ "
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/purchase_tv_price"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:textColor="@color/purple_200"
                    android:text="21,800원" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/purple_500"/>

                <TextView
                    android:id="@+id/purchase_tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="농헙에서 인정받아 믿고 먹을 수 있는 최상의 등급의 바질입니다. \n\n MoAS팜에서 제일 인기있는 향신료입니다.
                    \n\n\n\n\n\n 표브스 선정 가장 건강한 향신료 1위\n표브스 선정 20대가 키우고 싶은 식물 1위"
                    android:textSize="20sp" />

                <TextView
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:background="@color/purple_200"
                    android:textColor="@color/black"
                    android:layout_marginBottom="60dp"
                    android:text="문의 010-0000-0000"
                    />
                <TextView
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:background="@color/babypink"
                    android:textColor="@color/black"
                    android:layout_marginBottom="60dp"
                    android:text="리뷰"
                    />
            </LinearLayout>
        </ScrollView>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/shophome3"
            android:layout_width="40dp"
            android:src="@drawable/ic_home"
            android:layout_gravity="end|top"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/buybtn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/babypurple"
            android:padding="16dp"
            android:text="구매하기"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>



</LinearLayout>